{
  "name": "bethany-site",
  "version": "1.0.0",
  "description": "Landing page for Bethany - your relationship memory assistant",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/styles/main.css -o ./_site/styles/main.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles/main.css -o ./_site/styles/main.css --watch",
    "build:11ty": "npx @11ty/eleventy",
    "watch:11ty": "npx @11ty/eleventy --serve",
    "build": "npm run build:css && npm run build:11ty",
    "start": "npm-run-all --parallel watch:*",
    "dev": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}